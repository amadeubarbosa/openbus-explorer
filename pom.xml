<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>tecgraf.openbus</groupId>
  <artifactId>all-busexplorer</artifactId>
  <packaging>pom</packaging>
  <version>1.0.1</version>

  <name>OpenBus - BusAdminLib e BusExplorer</name>
  <url>http://www.tecgraf.puc-rio.br/openbus</url>
  
  <properties>
    <java.version>1.6</java.version>
    <project.build.sourceEncoding>ISO-8859-1</project.build.sourceEncoding>
    <diaglib.version>1.0.0</diaglib.version>
    <jacorb.version>3.3</jacorb.version>
    <javautils.version>1.10.0</javautils.version>
    <junit.version>4.6</junit.version>
    <openbus-core.version>2.0.0.3</openbus-core.version>
    <openbus-sdk.version>2.0.0.2</openbus-sdk.version>
    <scs.version>1.2.1.2</scs.version>
    <commons-io.version>1.3.2</commons-io.version>
  </properties>



  <modules>
    <module>BusAdminLib</module>
    <module>BusExplorer</module>
  </modules>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <source>${java.version}</source>
          <target>${java.version}</target>
          <compilerArgument>-Xlint:all</compilerArgument>
          <showWarnings>true</showWarnings>
          <showDeprecation>true</showDeprecation>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-install-plugin</artifactId>
        <version>2.5</version>
        <inherited>false</inherited>
        <executions>
          <execution>
            <id>install-javautils</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <file>lib/javautils-core-${javautils.version}.jar</file>
              <groupId>tecgraf.javautils</groupId>
              <artifactId>javautils-core</artifactId>
              <version>${javautils.version}</version>
              <packaging>jar</packaging>
              <generatePom>true</generatePom>
            </configuration>
          </execution>

          <execution>
            <id>install-scs-core</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <file>lib/scs-core-${scs.version}.jar</file>
              <groupId>tecgraf.scs</groupId>
              <artifactId>scs-core</artifactId>
              <version>${scs.version}</version>
              <packaging>jar</packaging>
              <generatePom>true</generatePom>
            </configuration>
          </execution>

          <execution>
            <id>install-openbus-core-admin</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <file>lib/openbus-core-admin-${openbus-core.version}.jar</file>
              <groupId>tecgraf.openbus</groupId>
              <artifactId>openbus-core-admin</artifactId>
              <version>${openbus-core.version}</version>
              <packaging>jar</packaging>
              <generatePom>true</generatePom>
            </configuration>
          </execution>

          <execution>
            <id>install-openbus-sdk-core</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <file>lib/openbus-sdk-core-${openbus-sdk.version}.jar</file>
              <groupId>tecgraf.openbus</groupId>
              <artifactId>openbus-sdk-core</artifactId>
              <version>${openbus-sdk.version}</version>
              <packaging>jar</packaging>
              <generatePom>true</generatePom>
            </configuration>
          </execution>

          <execution>
            <id>install-openbus-sdk-legacy</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <file>lib/openbus-sdk-legacy-${openbus-sdk.version}.jar</file>
              <groupId>tecgraf.openbus</groupId>
              <artifactId>openbus-sdk-legacy</artifactId>
              <version>${openbus-sdk.version}</version>
              <packaging>jar</packaging>
              <generatePom>true</generatePom>
            </configuration>
          </execution>

          <execution>
            <id>install-diaglib-core</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <file>lib/diaglib-core-${diaglib.version}.jar</file>
              <groupId>tecgraf.diaglib</groupId>
              <artifactId>diaglib-core</artifactId>
              <version>${diaglib.version}</version>
              <packaging>jar</packaging>
              <generatePom>true</generatePom>
            </configuration>
          </execution>

          <execution>
            <id>install-diaglib-addons</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <file>lib/diaglib-addons-${diaglib.version}.jar</file>
              <groupId>tecgraf.diaglib</groupId>
              <artifactId>diaglib-addons</artifactId>
              <version>${diaglib.version}</version>
              <packaging>jar</packaging>
              <generatePom>true</generatePom>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
